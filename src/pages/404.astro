---
import Layout from '../layouts/Layout.astro';
import PrimaryBtn from '../components/PrimaryBtn.astro';
import SecondaryBtn from '../components/SecondaryBtn.astro';
import { Image } from 'astro:assets';
import bgSections from '../assets/bgsections.jpg';
---

<Layout title="Stránka nenalezena - ARS Salon">
    <!-- Hero sekce s chybou -->
    <section class="relative py-24 lg:py-36 overflow-hidden bg-radial-gradient">
        <!-- Pozadí obrázek -->
        <div class="absolute inset-0 -z-10">
            <Image 
                src={bgSections}
                alt="Pozadí sekce"
                class="w-full h-full object-cover"
                width={1920}
                height={1080}
                loading="eager"
            />
            <!-- Překryv pro lepší čitelnost textu -->
            <div class="absolute inset-0 bg-black/60"></div>
        </div>
        
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
            <div class="space-y-8">
                <!-- 404 číslo -->
                <h1 class="text-8xl sm:text-9xl lg:text-[12rem] font-light tracking-wide leading-none text-white font-source-serif">
                    404
                </h1>
                
                <!-- Hlavní nadpis -->
                <h2 class="text-3xl sm:text-4xl lg:text-5xl font-regular tracking-wide leading-tight text-white font-source-serif">
                    STRÁNKA NENALEZENA
                </h2>
                
                <!-- Popis -->
                <p class="text-lg sm:text-xl leading-relaxed text-white font-light max-w-2xl mx-auto">
                    Omlouváme se, ale stránka, kterou hledáte, neexistuje nebo byla přesunuta. 
                    Vraťte se na hlavní stránku nebo použijte navigaci.
                </p>
                
                <!-- Tlačítka -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
                    <PrimaryBtn 
                        text="ZPĚT NA HLAVNÍ STRÁNKU"
                        href="/"
                        size="lg"
                    />
                    <SecondaryBtn 
                        text="KONTAKTOVAT"
                        href="/kontakt"
                        size="lg"
                    />
                </div>
            </div>
        </div>
    </section>

   
</Layout>