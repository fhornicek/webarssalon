---
import PrimaryBtn from '../components/PrimaryBtn.astro';
import { Image } from 'astro:assets';

export interface Props {
  title?: string;
  address?: string;
  phone?: string;
  email?: string;
  hours?: string[];
  buttonText?: string;
  buttonHref?: string;
  mapSrc?: string;
}

const { 
  title = "KONTAKT",
address = "Obchodní 15086\n686 01 Uherské Hradiště 1",
  phone = "+420 602 516 612",
  email = "icechmankova@gmail.com",
  hours = [
    "Pondělí - Pátek: 9:00 - 18:00",
    "Sobota: 9:00 - 14:00", 
    "Neděle: Zavřeno"
  ],
  buttonText = "NAPSAT ZPRÁVU",
  buttonHref = "/kontakt",
  mapSrc = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2613.8942346101303!2d17.46024077717013!3d49.06964507136167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47131438fc5a511b%3A0x475170d104ceeeed!2sARS%20salon!5e0!3m2!1scs!2scz!4v1761404258914!5m2!1scs!2scz"
} = Astro.props;
---

<section class="bg-beige py-16 lg:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      
      
      <div class="space-y-8">
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-regular tracking-wide leading-tight text-black font-source-serif">
          KONTAKT
        </h2>
        
        <div class="space-y-6">
          
          
          <div class="space-y-6">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              KONTAKT
            </h3>
            
            
            <div class="space-y-2 border-l-2 border-secondarybtn pl-4">
              <p class="text-base text-black font-light">
              Ivana Krausová Čechmánková
              </p>
              <a href="tel:+420602516612" class="block text-sm text-black font-light hover:text-secondarybtn transition-colors duration-300">
                +420 602 516 612
              </a>
              <a href="mailto:icechmankova@gmail.com" class="block text-sm text-black font-light hover:text-secondarybtn transition-colors duration-300">
                icechmankova@gmail.com
              </a>
            </div>

            
            <div class="space-y-2 border-l-2 border-secondarybtn pl-4">
              <p class="text-base text-black font-light">
                Marie Vidláková
              </p>
              <a href="tel:+420123456789" class="block text-sm text-black font-light hover:text-secondarybtn transition-colors duration-300">
                +420 123 456 789
              </a>
              <a href="mailto:marie.vidlakova@email.com" class="block text-sm text-black font-light hover:text-secondarybtn transition-colors duration-300">
                marie.vidlakova@email.com
              </a>
            </div>
          </div>

          
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              ADRESA
            </h3>
            <p class="text-base text-black font-light">
              Obchodní 15086<br>
              686 01 Uherské Hradiště 1
            </p>
          </div>

          
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              OTEVÍRACÍ DOBA
            </h3>
            <div class="space-y-1">
              <p class="text-base text-black font-light">Pondělí - Pátek: 9:00 - 18:00</p>
              <p class="text-base text-black font-light">Sobota: 9:00 - 14:00</p>
              <p class="text-base text-black font-light">Neděle: Zavřeno</p>
            </div>
          </div>
        </div>

        
        <div class="pt-4">
          <PrimaryBtn 
            text={buttonText}
            href={buttonHref}
            size="md"
          />
        </div>
      </div>

      
      <div class="h-[400px] lg:h-[500px]">
        {mapSrc ? (
<iframe 
            src={mapSrc}
            title="Mapa s umístěním ARS Salon, Obchodní 15086, Uherské Hradiště"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="rounded-lg"
          >
          </iframe>
        ) : (
          <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
            <p class="text-gray-500">Mapa není dostupná</p>
          </div>
        )}
      </div>
      
    </div>
  </div>
</section>