---
import PrimaryBtn from '../components/PrimaryBtn.astro';
import { Image } from 'astro:assets';

export interface Props {
  title?: string;
  address?: string;
  phone?: string;
  email?: string;
  hours?: string[];
  buttonText?: string;
  buttonHref?: string;
  mapSrc?: string;
}

const { 
  title = "KONTAKT",
address = "Obchodní 15086\n686 01 Uherské Hradiště 1",
  phone = "+420 602 516 612",
  email = "icechmankova@gmail.com",
  hours = [
    "Pondělí - Pátek: 9:00 - 18:00",
    "Sobota: 9:00 - 14:00", 
    "Neděle: Zavřeno"
  ],
  buttonText = "NAPSAT ZPRÁVU",
  buttonHref = "/kontakt",
  mapSrc = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2613.8942346101303!2d17.46024077717013!3d49.06964507136167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47131438fc5a511b%3A0x475170d104ceeeed!2sARS%20salon!5e0!3m2!1scs!2scz!4v1761404258914!5m2!1scs!2scz" // Google Maps embed URL
} = Astro.props;
---

<section class="bg-beige py-16 lg:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      
      <!-- Contact Info -->
      <div class="space-y-3">
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-regular tracking-wide leading-tight text-black font-source-serif">
          {title}
        </h2>
        
        <div class="space-y-4">
          
          <!-- Address -->
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              ADRESA
            </h3>
            <p class="text-base text-black font-light whitespace-pre-line">
              {address}
            </p>
          </div>

          <!-- Phone -->
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              TELEFON
            </h3>
            <a href={`tel:${phone}`} class="text-base text-black font-light hover:text-secondarybtn transition-colors duration-300">
              {phone}
            </a>
          </div>

          <!-- Email -->
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              E-MAIL
            </h3>
            <a href={`mailto:${email}`} class="text-base text-black font-light hover:text-secondarybtn transition-colors duration-300">
              {email}
            </a>
          </div>

          <!-- Opening Hours -->
          <div class="space-y-2">
            <h3 class="text-lg font-medium text-black uppercase tracking-wide font-source-serif">
              OTEVÍRACÍ DOBA
            </h3>
            <div class="space-y-1">
              {hours.map(hour => (
                <p class="text-base text-black font-light">
                  {hour}
                </p>
              ))}
            </div>
          </div>
          
        </div>

        <!-- Contact Button -->
        <div class="pt-4">
          <PrimaryBtn 
            text={buttonText}
            href={buttonHref}
            size="md"
          />
        </div>
      </div>

      <!-- Map -->
      <div class="h-[400px] lg:h-[500px]">
        {mapSrc ? (
<iframe 
            src={mapSrc}
            title="Mapa s umístěním ARS Salon, Obchodní 15086, Uherské Hradiště"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="rounded-lg"
          >
          </iframe>
        ) : (
          <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
            <p class="text-gray-500">Mapa není dostupná</p>
          </div>
        )}
      </div>
      
    </div>
  </div>
</section>